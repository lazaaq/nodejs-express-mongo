<div class="container mt-5">
    <h1>Detail Contact</h1>
    <div class="row mt-3">
        <% if (!contact) { %>
            <div class="alert alert-danger" role="alert">
                Data Contact tidak ditemukan! <a href="/contact" class="alert-link">Kembali ke daftar contact</a>.
            </div>
        <% } else {%>
        <div class="card">
            <div class="card-body" style="width: fit-content;">
                <h5 class="card-title"><%= contact.nama %> </h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %> </h6>
                <p class="card-text"><%= contact.email %></p>
                <form action="/contact?_method=DELETE" method="post" class="d-inline">
                    <input type="hidden" name="nama" value="<%= contact.nama %>">
                    <button class="badge bg-danger text-decoration-none border-0" onclick="return confirm('yakin?');"><i class="bi bi-trash me-1"></i>Hapus</button>
                </form>
                <a href="/contact/edit/<%= contact.nama %>" class="badge bg-warning text-decoration-none text-dark"><i class="bi bi-pencil me-1"></i>Edit</a>
                <a href="/contact" class="card-link d-block mt-3"><i class="bi bi-arrow-left"></i>Kembali ke daftar contact</a>
            </div>
        </div>
        <% } %> 
    </div>
</div>